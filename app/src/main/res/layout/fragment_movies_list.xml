<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movies_detail_background">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/red_aim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_2x"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_aim_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movies_list_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_x"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/red_aim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/red_aim"
        app:layout_constraintTop_toTopOf="@+id/red_aim"
        tools:text="Movies list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movies_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movies_list_header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/size_3x"
        tools:itemCount="3"
        tools:listitem="@layout/view_holder_movie"
        />

</androidx.constraintlayout.widget.ConstraintLayout>