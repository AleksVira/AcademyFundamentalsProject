<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieItemHolder"
    android:layout_width="170dp"
    android:layout_height="296dp"
    android:background="@drawable/item_rounded_rectangle_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/delimiterGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="50dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemMoviePicture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/delimiterGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/item_movie_bckgrnd"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ItemTopCornerSize8dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/parentalGuidanceMark"
        android:layout_width="@dimen/size_3x"
        android:layout_height="@dimen/size_3x"
        android:layout_marginStart="@dimen/size_x"
        android:layout_marginTop="@dimen/size_x"
        android:background="@drawable/rg_rounded_background"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:text="0+"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movieLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/half_x_size"
        android:padding="@dimen/half_x_size"
        android:src="@drawable/ic_like"
        app:layout_constraintBottom_toBottomOf="@+id/parentalGuidanceMark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parentalGuidanceMark" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/fade_transparency"
        app:layout_constraintBottom_toBottomOf="@+id/itemMoviePicture"
        app:layout_constraintEnd_toEndOf="@+id/itemMoviePicture"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="@+id/itemMoviePicture" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movieName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_x"
        android:layout_marginTop="@dimen/size_x"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_black"
        android:maxLines="1"
        tools:text="Avengers: End Game"
        android:textColor="@color/movie_white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delimiterGuideline" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lengthMin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_x"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/dark_grey"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieName"
        app:textAllCaps="true"
        tools:text="137 min" />

    <com.example.academyfundamentalsproject.CustomFiveStarsRating
        android:id="@+id/itemMovieRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:emptyStarImage="@drawable/ic_star_icon_empty"
        app:fullFilledStarImage="@drawable/ic_star_icon_filled"
        app:halfFilledStarImage="@drawable/ic_star_icon_1_2"
        app:threeQuarterFilledStarImage="@drawable/ic_star_icon_3_4"
        app:quarterFilledStarImage="@drawable/ic_star_icon_1_4"
        app:numberOfStars="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reviewsCounter"
        app:layout_constraintBottom_toBottomOf="@+id/reviewsCounter"
        android:layout_marginStart="@dimen/size_x"
        app:starSize="8dp"
        app:startRating="75" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reviewsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_x"
        android:layout_marginBottom="@dimen/size_x"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/rating_background"
        android:textSize="8sp"
        app:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/delimiterGuideline"
        app:layout_constraintStart_toEndOf="@+id/itemMovieRating"
        tools:text="125 Reviews" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemTagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/taglineText"
        android:layout_marginStart="@dimen/size_x"
        android:layout_marginBottom="@dimen/size_x"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/itemMovieRating"
        tools:text="Action, Adventure, Drama" />


</androidx.constraintlayout.widget.ConstraintLayout>